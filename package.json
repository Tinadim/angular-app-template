{
    "author": "Bernardo Reis",
    "name": "angular-app-template",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "engines": {
        "node": ">=12.14.0"
    },
    "dependencies": {
        "@angular/animations": "~9.1.7",
        "@angular/common": "~9.1.7",
        "@angular/compiler": "~9.1.7",
        "@angular/core": "~9.1.7",
        "@angular/forms": "~9.1.7",
        "@angular/platform-browser": "~9.1.7",
        "@angular/platform-browser-dynamic": "~9.1.7",
        "@angular/platform-server": "~9.1.7",
        "@angular/router": "~9.1.7",
        "@nguniversal/express-engine": "^9.1.1",
        "ajv": "^6.12.2",
        "akita": "^0.9.0",
        "app-root-path": "^3.0.0",
        "axios": "^0.19.2",
        "body-parser": "^1.19.0",
        "express": "^4.17.1",
        "express-ajv": "github:Tinadim/express-ajv#v1.1.0",
        "express-promise-router": "^3.0.3",
        "http-graceful-shutdown": "^2.3.2",
        "http-status-codes": "^1.4.0",
        "lodash": "^4.17.15",
        "rxjs": "~6.5.4",
        "ts-enum-util": "^4.0.1",
        "tslib": "^1.10.0",
        "winston": "^3.2.1",
        "yargs": "^15.3.1",
        "zone.js": "~0.10.2"
    },
    "devDependencies": {
        "@angular-builders/custom-webpack": "^9.1.0",
        "@angular-devkit/build-angular": "~0.901.6",
        "@angular/cli": "^9.1.6",
        "@angular/compiler-cli": "~9.1.7",
        "@ngneat/spectator": "^5.7.1",
        "@nguniversal/builders": "^9.1.1",
        "@types/app-root-path": "^1.2.4",
        "@types/body-parser": "^1.19.0",
        "@types/dotenv-safe": "^8.1.0",
        "@types/express": "^4.17.6",
        "@types/express-promise-router": "^3.0.0",
        "@types/http-status-codes": "^1.2.0",
        "@types/jasmine": "~3.5.0",
        "@types/jasminewd2": "~2.0.3",
        "@types/jest": "^25.2.2",
        "@types/jest-when": "^2.7.1",
        "@types/lodash": "^4.14.151",
        "@types/lolex": "^5.1.0",
        "@types/node": "^12.12.42",
        "@types/supertest": "^2.0.9",
        "@types/winston": "^2.4.4",
        "@types/yargs": "^15.0.5",
        "codelyzer": "^5.1.2",
        "jasmine-core": "~3.5.0",
        "jasmine-spec-reporter": "~4.2.1",
        "jest": "^26.0.1",
        "jest-preset-angular": "^8.2.0",
        "jest-when": "^2.7.1",
        "lolex": "^6.0.0",
        "protractor": "~5.4.3",
        "supertest": "^4.0.2",
        "ts-jest": "^26.0.0",
        "ts-node": "~8.3.0",
        "tslint": "~6.1.0",
        "typescript": "~3.8.3"
    },
    "scripts": {
        "build": "npm run build:client && npm run build:server",
        "build:production": "npm run build:client:production && npm run build:server:production",
        "build:client": "ng run app:build-client",
        "build:client:production": "ng run app:build-client:production",
        "build:server": "ng run app:build-server",
        "build:server:production": "ng run app:build-server:production",
        "coverage": "jest --coverage",
        "test": "jest",
        "serve:client": "ng run app:serve-client",
        "serve:server": "node dist/server/main.js",
        "serve": "ng run app:serve"
    },
    "license": "ISC",
    "browserslist": [
        "defaults",
        "not IE 9-11"
    ],
    "jest": {
        "clearMocks": true,
        "coveragePathIgnorePatterns": [
            "/node_modules/"
        ],
        "collectCoverageFrom": [
            "src/app/**/*.ts",
            "src/server/**/*.ts",
            "!src/server/tests/**",
            "!src/app/tests/**"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 95,
                "functions": 95,
                "lines": 95,
                "statements": 95
            }
        },
        "coverageReporters": [
            "lcov"
        ],
        "projects": [
            {
                "displayName": "app",
                "globals": {
                    "ts-jest": {
                        "tsConfig": "src/app/tests/tsconfig.spec.json",
                        "stringifyContentPathRegex": "\\.html$",
                        "astTransformers": [
                            "jest-preset-angular/build/InlineFilesTransformer",
                            "jest-preset-angular/build/StripStylesTransformer"
                        ]
                    }
                },
                "preset": "jest-preset-angular",
                "rootDir": "./",
                "roots": [
                    "./src/app"
                ],
                "setupFilesAfterEnv": [
                    "./src/app/tests/jest-setup.ts"
                ]
            },
            {
                "displayName": "server",
                "globals": {
                    "ts-jest": {
                        "tsConfig": "src/server/tests/tsconfig.spec.json"
                    }
                },
                "moduleNameMapper": {
                    "^@client/(.*)$": "<rootDir>/src/app/$1",
                    "^@environments/(.*)$": "<rootDir>/src/environments/$1",
                    "^@init$": "<rootDir>/src/server/config/init.ts",
                    "^@logger$": "<rootDir>/src/server/lib/logger.ts",
                    "^@server/(.*)$": "<rootDir>/src/server/$1",
                    "^@tests/(.*)$": "<rootDir>/src/server/tests/$1",
                    "^@test-lib/(.*)$": "<rootDir>/src/server/tests/lib/$1"
                },
                "rootDir": "./",
                "roots": [
                    "./src/server"
                ],
                "setupFilesAfterEnv": [
                    "./src/server/tests/jest-setup.ts"
                ],
                "testEnvironment": "node",
                "transform": {
                    "^.+\\.(ts|tsx)$": "ts-jest"
                }
            }
        ],
        "resetMocks": true,
        "restoreMocks": true
    }
}
