{
    "name": "server",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "npm run build:client && npm run build:server",
        "build:client": "cd ../client && npm run build:prod",
        "build:server": "ng build --prod",
        "serve": "npm run build && node dist/main.js",
        "serve:dev": "ng run server:serve",
        "test": "jest",
        "test:coverage": "jest --coverage"
    },
    "author": "Bernardo Reis",
    "license": "ISC",
    "dependencies": {
        "@angular-builders/custom-webpack": "^9.1.0",
        "@angular/common": "^9.1.7",
        "@angular/core": "^9.1.7",
        "@angular/platform-server": "^9.1.7",
        "@nguniversal/express-engine": "^9.1.1",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "lodash": "^4.17.15",
        "yargs-parser": "^18.1.3",
        "yargs-unparser": "^1.5.0",
        "zone.js": "^0.10.3"
    },
    "devDependencies": {
        "@angular-devkit/architect": "^0.901.7",
        "@angular-devkit/build-angular": "^0.901.6",
        "@angular-devkit/core": "^9.1.7",
        "@angular/animations": "^9.1.7",
        "@angular/cli": "^9.1.6",
        "@angular/compiler": "^9.1.7",
        "@angular/compiler-cli": "^9.1.7",
        "@angular/platform-browser": "^9.1.7",
        "@angular/platform-browser-dynamic": "^9.1.7",
        "@nguniversal/builders": "^9.1.1",
        "@types/browser-sync": "^2.26.1",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.6",
        "@types/jest": "^25.2.2",
        "@types/jest-when": "^2.7.1",
        "@types/lodash": "^4.14.151",
        "@types/node": "^14.0.1",
        "browser-sync": "^2.26.7",
        "http-proxy-middleware": "^1.0.4",
        "jest": "^26.0.1",
        "jest-when": "^2.7.1",
        "rxjs": "^6.5.5",
        "tree-kill": "^1.2.2",
        "ts-jest": "^26.0.0",
        "ts-node": "^8.10.1",
        "typescript": "~3.8.3"
    },
    "builders": "./builder/builders.json",
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.js",
            "src/**/*.ts"
        ],
        "coverageDirectory": "coverage",
        "coveragePathIgnorePatterns": [
            "/node_modules/"
        ],
        "coverageReporters": [
            "lcov"
        ],
        "globals": {
            "ts-jest": {
                "tsConfig": "test/tsconfig.test.json"
            }
        },
        "roots": [
            "test"
        ],
        "setupFilesAfterEnv": [
            "./test/jest-setup.ts"
        ],
        "testEnvironment": "node",
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        }
    }
}
